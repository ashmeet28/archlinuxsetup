sudo pacman -S vulkan-radeon bash-completion htop man-db man-pages smartmontools wget zip git ffmpeg dosfstools squashfs-tools rsync imagemagick ghostscript noto-fonts noto-fonts-cjk noto-fonts-emoji noto-fonts-extra ttf-hack ttf-opensans inter-font chromium audacity lmms qbittorrent inkscape qemu-desktop vlc vlc-plugins-all

sudo systemctl enable fstrim.timer
sudo systemctl enable bluetooth.service

useradd -m xenon
usermod -aG wheel xenon
export EDITOR=nano
visudo
passwd xenon

echo "1" | sudo tee /proc/sys/kernel/sysrq
echo "kernel.sysrq = 1" | sudo tee /etc/sysctl.d/99-sysctl.conf

cp code.desktop ~/.local/share/applications/
